root = true

[*]
charset = utf-8

[*.py]
tab_width = 4
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.sql]
tab_width = 4
end_of_line = crlf
indent_size = 4
indent_style = tab
insert_final_newline = false
trim_trailing_whitespace = true

[*.{md,txt}]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false
